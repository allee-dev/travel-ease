{
    "name": "travelease-website",
    "version": "1.0.0",
    "description": "Static tourism website promoting Northern Pakistan with GitHub Actions CI/CD",
    "scripts": {
        "dev": "parcel src/index.html",
        "build": "parcel build src/index.html --dist-dir dist --public-url ./",
        "lint:html": "htmlhint \"**/*.html\" --config .htmlhintrc",
        "lint:css": "stylelint \"**/*.css\" --config .stylelintrc.json",
        "lint": "npm run lint:html && npm run lint:css"
    },
    "devDependencies": {
        "htmlhint": "^1.6.3",
        "parcel": "^2.15.4",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0"
    },
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/allee-dev/travel-ease.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/allee-dev/travel-ease/issues"
    },
    "homepage": "https://github.com/allee-dev/travel-ease#readme"
}
